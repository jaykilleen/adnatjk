<div class="container mx-auto">

  <h2 class="text-2xl pt-8 pb-2">Organisations</h2>
  <table class="table-fixed">
    <thead>
      <tr>
        <th class="px-4 py-2">Name</th>
        <th class="px-4 py-2">Hourly Rate</th>
        <th class="px-4 py-2"></th>
        <th class="px-4 py-2"></th>
      </tr>
    </thead>
    <tbody>
      <% @organisations.each_with_index do |record, index| %>
        <tr class="<%= 'bg-gray-100' if index.odd? %>">
          <td class="border px-4 py-2"><%= record.name %></td>
          <td class="border px-4 py-2"><%= record.hourly_rate %></td>
          <td class="border px-4 py-2 link"><%= link_to 'Edit', edit_organisation_path(record) %></td>
          <td class="border px-4 py-2 link"><%= link_to 'Join', user_path(current_user, organisation_id: record.id, organisational_state: 'joining'), method: 'put' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <hr class="mt-8 mx-8">

  <div class="pt-8">
    <%= form_for @organisation, html: { class: "form-background" } do |f| %>
      <h2 class="text-xl bold pt-4">Create a New Organisation</h2>
      <div class="field pt-4">
        <%= f.label :name, class: 'field-label' %>
        <%= f.text_field :name, class: 'field-input' %>
      </div>
      <div class="field pt-4">
        <%= f.label :hourly_rate, class: 'field-label' %>
        <%= f.text_field :hourly_rate, class: 'field-input' %>
      </div>
      <div class="actions pt-4">
        <%= f.submit "Create", class: "btn btn-blue" %>
      </div>
    <% end %>
  </div>
</div>