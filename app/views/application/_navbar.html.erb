<div class="w-auto mx-12 py-2">
  <nav class="flex items-center">
    <div class="flex items-center logo pl-12 text-left mr-auto pb-2">
      <%= link_to root_path do %>
      <% end %>
    </div>
    <div class="flex justify-end ml-auto pr-2 items-center">
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <ul class="text-xl mr-6 py-2 px-6 shadow-md text-bold border-gray-900 border-2 bg-gray-900 text-white hover:bg-gray-700 hover:border-gray-700 rounded">Log Out</ul>
        <% end %>
      <% else %>
        <%= link_to new_user_session_path do %>
          <ul class="text-xl mr-6 py-2 px-6 shadow-md text-bold border-gray-900 border-2 bg-gray-900 text-white hover:bg-gray-700 hover:border-gray-700 rounded">Log In</ul>
        <% end %>
      <% end %>
    </div>
  </nav>
</div>