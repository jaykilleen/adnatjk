<div class="flex flex-col max-w-full h-screen justify-center items-center">
  <div class="justify-center items-center w-2/6 h-64 shadow-lg rounded border border-gray-300 py-4 px-20 w-auto h-auto">
    <h2 class="flex mt-10 text-3xl justify-center text-gray-800">Welcome back</h2>
    <p class="flex text-gray-600 justify-center mb-16">Sign in to your account to continue</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "flex flex-col justify-center items-center"}) do |f| %>
      <div class="flex flex-col justify-center">
        <%= f.label :email, "Email Address", class: "flex justify-start" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-lg py-2 px-4 block w-full appearance-none leading-normal" %>
      </div>

      <div>
        <%= f.label :password, class: "pt-4 flex justify-start" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-lg py-2 px-4 block w-full appearance-none leading-normal" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>  
  </div>
</div>