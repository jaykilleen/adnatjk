<div class="container mx-auto pt-8">
  <h2 class="text-xl bold">Edit User Details or Password</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-background" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field pt-4">
      <%= f.label :email, class: "field-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-input" %>
    </div>

    <div class="field pt-4">
      <%= f.label :name, class: "field-label" %>
      <%= f.text_field :name, class: "field-input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field pt-8 pl-8">
      <%= f.label :password, class: "field-label" %> <i>(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "field-input" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field pt-4 pl-8">
      <%= f.label :password_confirmation, class: "field-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field-input" %>
    </div>

    <div class="field pt-8">
      <%= f.label :current_password, class: "field-label" %>
      <p class="text-red-500"><i>(we need your current password to confirm your changes)</i></p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "field-input" %>
    </div>

    <div class="actions pt-4">
      <%= f.submit "Update", class: "btn btn-blue" %>
    </div>
  <% end %>

  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: "btn btn-red"%>

  <div class="py-8">
    <%= link_to "Back", :back, class: "text-blue-500" %>
  </div>
</div>
